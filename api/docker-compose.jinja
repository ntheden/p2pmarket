version: "3.3"

services:
    p2pmarket:
        image: "v4sats/p2pmarket:latest"
        container_name: "p2pmarket"
        environment:
            VIRTUAL_HOST: {{ api_endpoint }}
            LETSENCRYPT_HOST: {{ api_endpoint }}
            PYTHONPATH: /code/app
        networks: ["server"]
        restart: "always"
        volumes:
            - type: bind
              source: {{ run_dir }}  
              target: /code/run

networks:
    server:
        external: true

